<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="article" path="/">
        <default key="_controller">AppBundle:Article:index</default>
    </route>

    <route id="article_show" path="/{id}/show">
        <default key="_controller">AppBundle:Article:show</default>
    </route>

    <route id="article_new" path="/new">
        <default key="_controller">AppBundle:Article:new</default>
    </route>

    <route id="article_create" path="/create" methods="POST">
        <default key="_controller">AppBundle:Article:create</default>
    </route>

    <route id="article_edit" path="/{id}/edit">
        <default key="_controller">AppBundle:Article:edit</default>
    </route>

    <route id="article_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">AppBundle:Article:update</default>
    </route>

    <route id="article_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">AppBundle:Article:delete</default>
    </route>

</routes>
